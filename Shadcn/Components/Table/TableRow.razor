@using Microsoft.AspNetCore.Components
@using Shadcn.Components.Priv.Cn

<tr class="@GetRowClasses()" @attributes="AdditionalAttributes">
    @ChildContent
</tr>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string Class { get; set; } = string.Empty;
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string GetRowClasses() {
        var baseClasses = "border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted";
        return CnHelper.Cn(new[] { baseClasses, Class });
    }
}
